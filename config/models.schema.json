{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenRouter Models Configuration",
  "description": "Simplified configuration file for OpenRouter model definitions",
  "type": "object",
  "required": ["version", "defaultModel", "models"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "defaultModel": {
      "type": "string",
      "description": "Default model ID to use"
    },
    "models": {
      "type": "array",
      "description": "Array of model configurations",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "provider",
          "modelId",
          "description",
          "capabilities",
          "enabled"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the model"
          },
          "name": {
            "type": "string",
            "description": "Display name"
          },
          "provider": {
            "type": "string",
            "description": "Provider name (e.g., OpenAI, Anthropic, Google)"
          },
          "modelId": {
            "type": "string",
            "description": "OpenRouter model identifier"
          },
          "description": {
            "type": "string",
            "description": "Model description"
          },
          "capabilities": {
            "type": "array",
            "description": "List of model capabilities",
            "items": {
              "type": "string",
              "enum": ["Tools", "Vision", "Reasoning", "Streaming"]
            }
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether the model is enabled"
          }
        }
      }
    }
  }
}
